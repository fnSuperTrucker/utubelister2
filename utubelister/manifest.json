{
  "manifest_version": 3,
  "name": "YouTube Links Collector",
  "version": "1.0",
  "description": "An extension to collect YouTube links from chat",
  "permissions": [
    "storage",
    "activeTab",
    "declarativeContent",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.rumble.com/*", "*://*.odysee.com/*", "*://*.pilled.net/*"],
      "js": ["content-script.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Open Links List"
  }
}